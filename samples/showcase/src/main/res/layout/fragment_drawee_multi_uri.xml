<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/drawee_view"
      android:layout_width="@dimen/drawee_width_medium"
      android:layout_height="@dimen/drawee_height_medium"
      />

  <TextView
      android:id="@+id/text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_medium"
      android:gravity="center"
      android:text="@string/drawee_multi_uri_help"
      android:textAppearance="?android:attr/textAppearanceSmall"
      />

  <Button
      android:id="@+id/btn_first_available"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/load_first_available"
      />

  <Button
      android:id="@+id/btn_increasing_quality"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/load_increasing_quality"
      />

  <Button
      android:id="@+id/btn_both"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/load_multi_uri_both"
      />

  <com.google.android.material.switchmaterial.SwitchMaterial
      android:id="@+id/switch_use_vito"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/use_vito"
      />
</LinearLayout>
